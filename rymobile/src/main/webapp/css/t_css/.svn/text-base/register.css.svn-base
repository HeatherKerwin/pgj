@charset "utf-8";
/* CSS Document */
/*注册头部*/
.register_top{
	width: 100%;
	height: 3.4rem;
	background: #FFF;
	position: relative;
}
.logoIcon{
	position: absolute;
    top: 0.3rem;
    left: 0.2rem;
    width: auto;
    height: 3rem;
}
.title{
	position:absolute;
	top:0;
	text-align: center;
	font-size: 2.4rem;
	line-height: 3.4rem;
	width: 100%;
	color: #2d2d2d;
}
.register_top_r{
	width: 10rem;
	position: absolute;
	right: 0rem;
	top: 0.3rem;
}
.icon{
	width: 3rem;
	height: 3rem;
	margin-right: 0.3rem ;
}
.icon img{
	width: 3rem;
	height: 3rem;
}

/*banner*/
.banner{
	width: 100%;
	height: auto;
}
.banner img{
	width: 100%;
	height: auto;
}
/*注册输入*/
.register_con{
	width: 88%;
	height: auto;
	margin: 4.5% 6% 0 6%;
	background: #FFF;
}
.register_phone , .register_captcha ,.login_password{
	width: 100%;
	height: 4rem;
	border: 1px solid #c8c8c8;
	border-radius: 0.3rem;
	font-size: 3rem;
	line-height: 3.8rem;
	margin: 2.6% 0;
}
.phone_icon , .captcha_icon ,.password_icon{
	width: 5%;
	height: 3.4rem;
	margin: .3rem 3%;
	text-align: center;
}
.phone_icon{
	background:url(../../images/t_img/shoujihao.png) center no-repeat;
	background-size: 100% auto;
}
.captcha_icon{
	background:url(../../images/t_img/yanzhengma.png) center no-repeat;
	background-size: 100% auto;
}
.password_icon{
	background: url(../../images/t_img/mima.png) center no-repeat;
	background-size: 100% auto;
}
.register_phone input , .register_captcha input ,.login_password input{
	background: none;
	border: 0;
	font-size: 2.9rem;
	line-height: 4rem;
}
.register_phone input ,.login_password input{
	width: 88%;
}
.register_captcha input{
	width: 40%;
}
input[type="button"].register_yzm{
	height: 4rem;
	font-size: 3rem;
	line-height: 4rem;
	color: #fff;
	background: #f84040;
	border: 0;
	border-radius: 0 0.3rem 0.3rem 0;
	padding: 0 5%;
}
.register_btn{
	width:88%;
	background:#f84040;
	border-radius:.5rem;
	color:#FFFFFF;
	font-size: 3.6rem;
	border: 0;
	height:5rem;
	line-height:3.9rem;
	margin: 0 6%;
}
/*复选框*/
.checkbox  {
	float: left;
	margin-left: 6%;
	font-size: 3rem;
	color: #2d2d2d;
	margin-bottom: 2.6% ;
}
.ui-list-checkbox .ui-checkbox {
	position:absolute;
	top:50%;
	left:0;
	margin-top:-1rem
}
.ui-list-checkbox>li {
	padding-left:40px
}
.ui-checkbox input {
	display:inline-block;
	width:25px;
	height:1px;
	position:relative;
	overflow:visible;
	border:0;
	background:0 0;
	-webkit-appearance:none;
	outline:0;
	vertical-align:middle
}
.ui-checkbox input:before {
	background: url(../../images/t_img/icon11.png) no-repeat -50px -25px;
	-webkit-background-size:150px auto;
	content:"";
	display:block;
	width:25px;
	height:26px;
	position:absolute;
	left:0;
	top:-10px
}
.ui-checkbox input:checked:before {
	background-position:-25px -25px
}
.ui-checkbox-s {
	width:19px
}
.ui-checkbox-s input:before {
	width:21px;
	height:20px;
	background-position:-100px -25px
}
.ui-checkbox-s input:checked:before {
	background-position:-75px -25px
}
.checkbox a{
	color:#d43c33;
}

.register_foot{
	width: 88%;
	height: 3rem;
	font-size: 3rem;
	color: #2d2d2d;
	margin: 4.6% 6%;
}
.register_foot a{
	font-size: 3rem;
	color: #2d2d2d;
}

.xy{
	width: 100%;
	height: 100%;
	position: fixed;
	background:rgba(0,0,0,0.6);
	z-index: 9;
	top: 0;
	display: none;
}
.xy_con{
	width: 88%;
	height: 84%;
	position: relative;
	top: 8%;
	margin: 0 auto;
	z-index: 15;
	color: #2d2d2d;
	border: 2px solid #f84040;
	background: #FFF;
	border-radius: 5px;
	padding: 0.5rem 1rem;
	overflow: auto;
}
.xy h2{
	text-align: center;
	font-size: 3rem;
	margin: 1rem auto;
}
.xy p{
	font-size: 2.2rem;
	line-height: 2.8rem;
}
.xy_close{
	position: fixed;
    top: 5%;
    right: 1.5%;
	z-index: 20;
	width: 5rem;
	height: 5rem;
	background: url(../../images/t_img/back_yuan.png) center no-repeat;
	background-size: 100%;
}