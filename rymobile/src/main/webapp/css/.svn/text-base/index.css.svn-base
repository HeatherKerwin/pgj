@charset "utf-8";
/* CSS Document */

/* 公用 */
* {
	margin: 0;
	padding: 0;
}
body {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 12px;
	color: #333;
}
h1, h2, h3, h4, h5, h6 {
	font-size: 100%;
	font-weight: 500
}
img {
	outline: none;
	border: none;
}
a {
	text-decoration: none;
	color: #333;
	outline: none;
}
ul, li, a {
	list-style: none;
}
.fl {
	float: left;
}
.fr {
	float: right;
}
.clearfix:after {
	clear: both;
	display: block;
	font-size: 0;
	height: 0;
	content: ".";
	visibility: hidden;
}



/*top*/
.top{
	width:100%;
	height:auto;
}
.top_l{
	width:80%;
	height:4em;
	background:#b01c14;
	font-weight:700;
	line-height:2em;
	text-align:center;
}
.top_a{
	width:60%;
	margin-left:25%;
	font-size:1.8em;
	line-height:2em;
	color:#fff;
	font-weight:700;
}
.top_r{
	width:19.5%;
	height:4em;
	text-align:center;
	background:#b01c14;
}
.top_i{
	width:50%;
	height:2em;
	margin:.8em 25%;
	border:none;
}
.xz-app{
	width:25%;
	height:2em;
	font-size:1.5em;
	line-height:2em;
	background:#FFF;
	border:#CCC .1em solid;
	border-radius:.4em;
	text-align:center;
	position:absolute;
	top:2.7em;
	left:74%;
	z-index:10000;
	display:none;
}

/*con*/
.con{
	width:100%;
	height:auto;
	background:#fff;
}
.row1{
	width:100%;
	height:5em;
	text-align:center;
	margin-top:.5em;
}
.row2{
	width:100%;
	height:1.2em;
	font-size:1.1em;
	line-height:1.2em;
	text-align:center;
	color:#000;
	margin-top:.2em;
}
.line{
	width:33.3%;
}
.row1 img{
	width:5em;
	height:auto;
}

/*foot*/
.foot{
	width:100%;
	height:20%;
	margin-top:2em;
}
.zcty{
	width:70%;
	height:2.5em;
	text-align:center;
	font-size:1.6em;
	font-weight:600;
	line-height:2.5em;
	margin:.3em 15%;
	background:url(../images/landing_4.png) repeat-x;
	background-size:100% 100%;
	border:none;
	border-radius:.6em;
}
.xzty{
	text-align:center;
	font-size:1em;
	margin:1em auto 3em;
}