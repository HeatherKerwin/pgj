<script type="text/x-handlebars-template" id="COMPANY">
{{#each list}}
	 <li class="companyListShow" onclick="selectionBtn('{{id}}')">
		<ul class="companyTitle">
			<li class="w310">机构名称</li>
			<li class="w200">联系人</li>
			<li class="w450">评分</li>
		</ul>
		<label for="choseJG" class="selectionBtn">
